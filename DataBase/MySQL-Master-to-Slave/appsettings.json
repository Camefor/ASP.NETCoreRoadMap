{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "MasterConnection": "Server=192.168.xx.xxx;Database=xxx;User=root;Password=xxxx;Max Pool Size=100;",
    "SlaveConnection": "Server=192.168.xx.xxx;Database=xxx;User=root;Password=xxxx;Max Pool Size=200;"
    //从库的 Max Pool Size 通常可以设置得比主库大，因为读请求通常远多于写请求。
  }
}
